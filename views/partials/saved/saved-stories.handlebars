<li>
    <div class="saved-story">
        <a href="{{link}}" class="story-link" target="_blank">{{title}}</a>
        <button type="button" class="comment-btn" data-id="{{_id}}" data-toggle="collapse" data-target="#story-{{_id}}"
            aria-expanded="false" aria-controls="story-{{_id}}"><i class="fas fa-comment"></i></button>
        <button type="button" class="remove-btn" data-id="{{_id}}"><i class="fas fa-minus-circle"></i></button>
    </div>
    <div class="collapse" id="story-{{_id}}">
        <form method="POST" role="form" data-story="{{_id}}">
            <div class="form-group">
                <label for="author">Name</label>
                <input type="text" class="form-control author" placeholder="John Wick">
            </div>
            <div class="form-group required">
                <label for="comment">Comment</label>
                <textarea class="form-control comment" rows="3" required></textarea>
            </div>
            <button type="submit" class="btn btn-primary submit-btn">Submit</button>
        </form>
    </div>
</li>